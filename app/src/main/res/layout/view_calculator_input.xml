<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:parentTag="android.widget.RelativeLayout">

    <View android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/tile_background_color"
    />

    <ImageView
            android:id="@+id/input_element_image"
            android:layout_width="@dimen/input_tile_size"
            android:layout_height="@dimen/input_tile_size"
            android:layout_centerInParent="true"
            app:tint="@color/colorAccent"
            tools:src="@drawable/ic_trash"
            tools:ignore="contentDescription"
    />

    <TextView
            android:id="@+id/input_element_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="24sp"
            tools:text="1"
    />

    <View
            android:id="@+id/input_element_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
    />
</merge>