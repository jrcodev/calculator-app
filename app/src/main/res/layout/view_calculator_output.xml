<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:orientation="vertical"
       android:layout_height="match_parent"
       android:layout_width="match_parent"
       tools:gravity="center_vertical"
       tools:orientation="vertical"
       tools:parentTag="android.widget.LinearLayout">
    <TextView
            android:id="@+id/calculator_input_equation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:maxLines="3"
            android:padding="@dimen/output_equation_padding"
            android:textColor="@color/output_equation_color"
            android:textSize="32sp"
            tools:text="8*3"
    />
    <TextView
            android:id="@+id/calculator_input_outcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="end"
            android:maxLines="1"
            android:textSize="24sp"
            android:padding="@dimen/output_equation_padding"
            android:textColor="@color/output_outcome_color"
            tools:text="24"
    />

</merge>